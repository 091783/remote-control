<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00ff00"
        android:stretchColumns="0"
        android:id="@+id/tableLayout4"
        app:layout_constraintTop_creator="1"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:text="我的电视"
                android:textSize="26dp" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/ShowPower"
                android:layout_width="wrap_content"
                android:text="电源:关"
                android:textSize="24dp" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/ShowVolume"
                android:layout_width="wrap_content"
                android:text="音量:50"
                android:textSize="24dp" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/ShowChannel"
                android:layout_width="wrap_content"
                android:text="当前频道:0"
                android:textSize="24dp" />
        </TableRow>
    </TableLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的遥控器"
        android:textSize="30dp"
        android:id="@+id/textView4"
        app:layout_constraintTop_creator="1"
        android:layout_marginStart="21dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout4"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/textView7"
        android:layout_marginLeft="21dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电源开关"
        android:textSize="24dp"
        app:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/textView7" />

    <Switch
        android:id="@+id/PowerSwitch"
        android:layout_width="50dp"
        android:layout_height="0dp"
        app:layout_constraintTop_creator="1"
        app:layout_constraintRight_creator="1"
        app:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="音量控制"
        android:textSize="24dp"
        android:id="@+id/textView5"
        app:layout_constraintTop_creator="1"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView7" />
    <SeekBar
        android:id="@+id/VolumeSeekBar"
        android:layout_width="260dp"
        android:layout_height="10dp"
        android:max="100"
        android:progress="50"
        app:layout_constraintTop_creator="1"
        app:layout_constraintRight_creator="1"
        app:layout_constraintBottom_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/PowerSwitch"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/textView5"
        android:layout_marginLeft="-4dp"
        android:layout_marginTop="10dp" />
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView6"
        android:layout_marginLeft="-4dp"
        android:id="@+id/tableLayout3"
        app:layout_constraintVertical_bias="0.0">
        <TableRow>
            <Button
                android:id="@+id/Button0"
                android:text="0"
                android:textSize="18dp"
                android:enabled="false"/>
            <Button
                android:id="@+id/Button1"
                android:text="1"
                android:textSize="18dp"
                android:enabled="false"/>
            <Button
                android:id="@+id/Button2"
                android:text="2"
                android:textSize="18dp"
                android:enabled="false"/>
            <Button
                android:id="@+id/Button3"
                android:text="3"
                android:textSize="18dp"
                android:enabled="false"/>
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/Button4"
                android:text="4"
                android:textSize="18dp"
                android:enabled="false"/>
            <Button
                android:id="@+id/Button5"
                android:text="5"
                android:textSize="18dp"
                android:enabled="false"/>
            <Button
                android:id="@+id/Button6"
                android:text="6"
                android:textSize="18dp"
                android:enabled="false"/>
            <Button
                android:id="@+id/Button7"
                android:text="7"
                android:textSize="18dp"
                android:enabled="false"/>
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/Button8"
                android:text="8"
                android:textSize="18dp"
                android:enabled="false"/>
            <Button
                android:id="@+id/Button9"
                android:text="9"
                android:textSize="18dp"
                android:enabled="false"/>
            <Button
                android:id="@+id/ButtonAdd"
                android:text="频道+"
                android:textSize="18dp"
                android:enabled="false"/>
            <Button
                android:id="@+id/ButtonReduce"
                android:text="频道-"
                android:textSize="18dp"
                android:enabled="false"/>
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/ButtonLike"
                android:text="CCTV5"
                android:textSize="18dp"
                android:enabled="false" />
            <Button
                android:id="@+id/ButtonLike2"
                android:text="CCTV5+"
                android:textSize="18dp"
                android:enabled="false"/>
            <Button
                android:id="@+id/ButtonLike3"
                android:text="CCTV9"
                android:textSize="18dp"
                android:enabled="false"/>
            <Button
                android:id="@+id/ButtonReset"
                android:text="复位"
                android:textSize="18dp"
                android:enabled="false"/>
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注:喜爱频道中的CCTV5+暂定为50频道"
        android:textAlignment="center"
        android:textSize="22dp"
        android:id="@+id/textView6"
        app:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_creator="1"
        android:layout_marginBottom="41dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="4dp" />
</android.support.constraint.ConstraintLayout>
</ScrollView>